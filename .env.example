# Canva API (for automated design generation)
CANVA_CLIENT_ID=your-canva-client-id-here
CANVA_CLIENT_SECRET=your-canva-client-secret-here
CANVA_REDIRECT_URI=http://localhost:3000/auth/canva/callback
CANVA_BRAND_KIT_ID=your-brand-kit-id-here
REACT_APP_CANVA_CLIENT_ID=your-canva-client-id-here

# Optional: Webhook URL for progress notifications
REACT_APP_WEBHOOK_URL=https://your-webhook-endpoint.com/progress

# Image Service API Keys
REACT_APP_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
REACT_APP_PIXABAY_KEY=your_pixabay_api_key_here  
REACT_APP_PEXELS_KEY=your_pexels_api_key_here

# Application Settings
NODE_ENV=development
PORT=3000