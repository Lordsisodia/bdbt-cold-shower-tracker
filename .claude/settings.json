{
  "name": "BDBT Tips System",
  "version": "1.0.0",
  "hooks": {
    "user-prompt-submit": [
      {
        "description": "Validate and enhance prompts",
        "command": "echo 'ðŸ” Processing request for BDBT Tips System...'"
      }
    ],
    "session-start": [
      {
        "description": "Load development context",
        "command": "bash .claude/hooks/scripts/session-context.sh"
      }
    ],
    "pre-tool-use": {
      "Edit": [
        {
          "description": "Format code before editing",
          "command": "bash .claude/hooks/scripts/prettier-format.sh ${file_path}"
        }
      ],
      "Write": [
        {
          "description": "Backup critical files",
          "pattern": "(package\\.json|tsconfig\\.json|\\.env)",
          "command": "cp '${file_path}' '${file_path}.backup.$(date +%Y%m%d_%H%M%S)' 2>/dev/null || true"
        }
      ]
    },
    "post-tool-use": {
      "Edit": [
        {
          "description": "Type check after TypeScript edits",
          "pattern": "\\.(ts|tsx)$",
          "command": "npm run typecheck 2>/dev/null || echo 'âš ï¸  Type checking skipped'"
        }
      ],
      "MultiEdit": [
        {
          "description": "Build check after multiple edits",
          "command": "echo 'ðŸ”¨ Consider running: npm run build'"
        }
      ]
    },
    "stop": [
      {
        "description": "Log session completion",
        "command": "echo \"âœ… BDBT session completed: $(date)\" >> ~/.claude/bdbt-sessions.log"
      }
    ]
  },
  "features": {
    "auto-format": true,
    "type-checking": true,
    "session-logging": true,
    "backup-configs": true
  }
}