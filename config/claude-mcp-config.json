{
  "mcpServers": {
    "21st-dev-magic": {
      "command": "npx",
      "args": ["@21st-dev/magic"],
      "env": {
        "MAGIC_API_KEY": "your-api-key-here"
      }
    },
    "web-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-web-search"]
    },
    "github": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-github"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."]
    }
  }
}